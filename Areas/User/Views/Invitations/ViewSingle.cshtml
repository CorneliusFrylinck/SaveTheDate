@model IEnumerable<WeddingAnniversary.Areas.User.Models.Invitation>

@{
    ViewData["Title"] = "View Single";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Invitations Sent <a id="right-10" class="btn btn-primary float-right" href="/User/Invitations/Create">Create New</a></h1>
<br />
<br />
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.WeddingName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Venue)
            </th>
            <th class="wedding">
                @Html.DisplayNameFor(model => model.WeddingDate)
            </th>
            <th class="rsvp">
                @Html.DisplayNameFor(model => model.RSVPDate)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.WeddingName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Venue)
                </td>
                <td class="wedding" id="wedding">
                    @Html.DisplayFor(modelItem => item.WeddingDate)
                </td>
                <td class="rsvp" id="rsvp">
                    @Html.DisplayFor(modelItem => item.RSVPDate)
                </td>
                <td>
                    <!--<a asp-action="Edit"  href="#" onclick="EditRoute(@item.Id)">Edit</a> |-->
                    <a asp-action="Details" href="#" onclick="DetailsRoute(@item.Id)">Details</a>
                    <!--| <a asp-action="Delete" href="#" onclick="DeleteRoute(@item.Id)">Delete</a>-->
                </td>
            </tr>
        }
        @if (Model.Count() <= 0)
        {
            <tr><td>No data found</td></tr>
        }
    </tbody>
</table>
